<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.dao.UsersEntity" table="userEntities" schema="public" catalog="car_sharing_service">
        <id name="id">
            <column name="id" sql-type="bigint"/>
        </id>
        <property name="login">
            <column name="login" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="role">
            <column name="role" sql-type="integer"/>
        </property>
        <property name="idextrausersdata">
            <column name="idextrausersdata" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <many-to-one name="rolesByRole" class="org.example.dao.RolesEntity">
            <column name="role"/>
        </many-to-one>
        <many-to-one name="extrausersdataByIdextrausersdata" class="org.example.dao.ExtrausersdataEntity">
            <column name="idextrausersdata" not-null="true"/>
        </many-to-one>
        <set name= inverse="true">
            <key>
                <column name="iduser"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.dao.OrdersEntity"/>
        </set>
    </class>
</hibernate-mapping>