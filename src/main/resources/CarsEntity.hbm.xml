<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.dao.CarsEntity" table="cars" schema="public" catalog="car_sharing_service">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="carnumber">
            <column name="carnumber" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="price">
            <column name="price" sql-type="integer"/>
        </property>
        <property name="limitations">
            <column name="limitations" sql-type="varchar(200)" length="200" not-null="true"/>
        </property>
        <property name="idimage">
            <column name="idimage" sql-type="integer" not-null="true"/>
        </property>
        <property name="idmodel">
            <column name="idmodel" sql-type="integer"/>
        </property>
        <many-to-one name="carsmodelsByIdmodel" class="org.example.dao.CarsmodelsEntity">
            <column name="idmodel"/>
        </many-to-one>
        <set name="ordersById" inverse="true">
            <key>
                <column name="idcar"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.dao.OrdersEntity"/>
        </set>
    </class>
</hibernate-mapping>